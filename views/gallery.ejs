        function videoBtnRight() {
            if (j == 13) {
                j = 1;
            }
            document.getElementById('gvdfsi1').src = vs.concat(j, ve);
            document.getElementById('gvdfsi2').src = vs.concat(j + 1, ve);
            document.getElementById('gvdfsi3').src = vs.concat(j + 2, ve);
            document.getElementById('gvdfsi4').src = vs.concat(j + 3, ve);
            j = j + 4;
        }
        var k = 12;
        function videoBtnLeft() {
            if (k == 0) {
                k = 12;
            }
            document.getElementById('gvdfsi1').src = vs.concat(k - 3, ve);
            document.getElementById('gvdfsi2').src = vs.concat(k - 2, ve);
            document.getElementById('gvdfsi3').src = vs.concat(k - 1, ve);
            document.getElementById('gvdfsi4').src = vs.concat(k, ve);
            k = k - 4;
        }

        function gvdfsb1() {
            document.getElementById('gvouter').src = document.getElementById('gvdfsi1').src;
            document.getElementById('gvouter').play();
        }
        function gvdfsb2() {
