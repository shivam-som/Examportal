        var i = 1;
        var start = "../assets/images/gallery-slide-img-";
        var extn = ".jpg";

        function right() {
            // document.getElementById('img-box-2').src = "./images/gallery-slide-img-3.jpg";
            if (i == 10) {
                i = 0;
            }
            document.getElementById('img-box-1').src = start.concat(i + 1, extn);
            document.getElementById('img-box-2').src = start.concat(i + 2, extn);
            document.getElementById('img-box-3').src = start.concat(i + 3, extn);
            i = (i % 10) + 1;
        }
